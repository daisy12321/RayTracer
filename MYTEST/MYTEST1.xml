<?xml version="1.0" encoding="UTF-8" ?>
<!--  A kid's bedroom design.
 -->
<scene>
  <camera>
    <viewPoint>6 12 4</viewPoint>
    <viewDir>-3 -6 -2</viewDir>
    <projNormal>3 6 2</projNormal>
    <viewUp>0 0 1</viewUp>
    <projDistance>6</projDistance>
    <viewWidth>8</viewWidth>
    <viewHeight>6</viewHeight>
  </camera>
  <image>
    800 600
  </image>
<shader name="glazed" type="Glazed">
    <refractiveIndex>1.5</refractiveIndex>
		<substrate type="Lambertian">
			<diffuseColor>0.4 0.6 0.8</diffuseColor>
		</substrate>
  </shader>
<shader name="glazed2" type="Glazed">
    <refractiveIndex>1.4</refractiveIndex>
		<substrate type="Lambertian">
			<diffuseColor>0.3 0.8 0.4</diffuseColor>
		</substrate>
  </shader>
  <shader name="white1" type="Lambertian">
    <diffuseColor>.8 .8 .8</diffuseColor>
  </shader>
  <shader name="green1" type="Lambertian">
    <diffuseColor>.615 .756 .286</diffuseColor>
  </shader>
  <shader name="green2" type="Lambertian">
    <diffuseColor>.3 .4 .1</diffuseColor>
  </shader>  
  <shader name="green3" type="Lambertian">
    <diffuseColor>.2 .3 .1</diffuseColor>
  </shader>
  <shader name="green4" type="Phong">
    <diffuseColor>.2 .3 .1</diffuseColor>
    <specularColor>0.4 1 0</specularColor>
    <exponent>10</exponent>
  </shader>
  <shader name="gray1" type="Lambertian">
    <diffuseColor>.4 .4 .4</diffuseColor>
  </shader>
  <shader name="gray2" type="Lambertian">
    <diffuseColor>.2 .2 .2</diffuseColor>
  </shader>
  <shader name="black1" type="Lambertian">
    <diffuseColor>.1 .1 .1</diffuseColor>
  </shader>
  <shader name="black2" type="Phong">
    <diffuseColor>.1 .1 .1</diffuseColor>
    <specularColor>0.8 0.8 0.8</specularColor>
    <exponent>10</exponent>
  </shader>
  <surface type="Box" name="Floor">
    <shader ref="green1" />
    <minPt>-0.2 0 -0.2</minPt>
    <maxPt>10 10 0</maxPt>
  </surface>
  <surface type="Box" name="Matt on floor">
    <shader ref="green3" />
    <minPt>4.3 5 0</minPt>
    <maxPt>10 10 0.2</maxPt>
  </surface>
  <surface type="Box" name="Wall behind bed">
    <shader ref="green3" />
    <minPt>0 -1 0</minPt>
    <maxPt>10 0 10</maxPt>
  </surface>
  <surface type="Box" name="Picture on wall">
    <shader ref="glazed" />
    <minPt>4 0 4</minPt>
    <maxPt>5.5 0.2 5.5</maxPt>
  </surface>
  <surface type="Box" name="Bookshelf vertical slab">
    <shader ref="green1" />
    <minPt>1.8 0 0</minPt>
    <maxPt>2 1.5 8</maxPt>
  </surface>
  <surface type="Box" name="Bookshelf vertical slab back">
    <shader ref="green1" />
    <minPt>-0.2 0 0</minPt>
    <maxPt>0 1.5 8</maxPt>
  </surface>
  <surface type="Box" name="Wall with window - left">
    <shader ref="green3" />
    <minPt>-0.4 0 0</minPt>
    <maxPt>-0.2 3 8</maxPt>
  </surface>
  <surface type="Box" name="Wall with window - middle">
    <shader ref="green3" />
    <minPt>-0.4 3 0</minPt>
    <maxPt>-0.2 8 2</maxPt>
  </surface>
  <surface type="Box" name="Wall with window - right">
    <shader ref="green3" />
    <minPt>-0.4 8 0</minPt>
    <maxPt>-0.2 12 8</maxPt>
  </surface>
  <surface type="Box" name="Bookshelf level 1">
    <shader ref="green2" />
    <minPt>0 0 2.8</minPt>
    <maxPt>1.8 1.5 3</maxPt>
  </surface>
  <surface type="Box" name="Bookshelf level 1 book 1">
    <shader ref="gray1" />
    <minPt>0 0 3</minPt>
    <maxPt>0.2 1.3 4</maxPt>
  </surface>
  <surface type="Box" name="Bookshelf level 1 book 2">
    <shader ref="gray2" />
    <minPt>0.2 0 3</minPt>
    <maxPt>0.4 1.3 4</maxPt>
  </surface>
  <surface type="Box" name="Bookshelf level 1 book 3">
    <shader ref="gray1" />
    <minPt>0.5 0 3</minPt>
    <maxPt>0.8 1.3 4</maxPt>
  </surface>
  <surface type="Box" name="Bookshelf level 2">
    <shader ref="green2" />
    <minPt>0 0 4.2</minPt>
    <maxPt>1.8 1.5 4.4</maxPt>
  </surface>
  <surface type="Box" name="Bookshelf level 2 book 1">
    <shader ref="gray1" />
    <minPt>0 0 4.4</minPt>
    <maxPt>0.3 1.3 5.4</maxPt>
  </surface>
  <surface type="Box" name="Bookshelf level 2 book 2">
    <shader ref="gray2" />
    <minPt>0.3 0 4.4</minPt>
    <maxPt>0.4 1.3 5.4</maxPt>
  </surface>
  <surface type="Box" name="Bookshelf level 2 book 3">
    <shader ref="gray1" />
    <minPt>0.5 0 4.4</minPt>
    <maxPt>0.7 1.3 5.4</maxPt>
  </surface>
  <surface type="Box" name="Bookshelf level 2 book 4">
    <shader ref="gray1" />
    <minPt>1.5 0 4.4</minPt>
    <maxPt>1.7 1.3 5.4</maxPt>
  </surface>
  <surface type="Box" name="Bookshelf level 3">
    <shader ref="green2" />
    <minPt>0 0 5.6</minPt>
    <maxPt>1.8 1.5 5.8</maxPt>
  </surface>
  <surface type="Box" name="Bed Support">
    <shader ref="green1" />
    <minPt>2 0 0</minPt>
    <maxPt>8 3 1</maxPt>
  </surface>
  <surface type="Box" name="Wadrobe 1">
    <shader ref="green2" />
    <minPt>2 3 0</minPt>
    <maxPt>4.9 3.1 0.45</maxPt>
  </surface>
  <surface type="Sphere" name="Wadrobe 1 - knob">
    <shader ref="green4" />
    <center>3.45 3.1 0.225</center>
    <radius>0.1</radius>
  </surface>
  <surface type="Box" name="Wadrobe 2">
    <shader ref="green2" />
    <minPt>5.1 3 0</minPt>
    <maxPt>8 3.1 0.45</maxPt>
  </surface>
  <surface type="Sphere" name="Wadrobe 2 - knob">
    <shader ref="green4" />
    <center>6.55 3.1 0.225</center>
    <radius>0.1</radius>
  </surface>
  <surface type="Box" name="Wadrobe 3">
    <shader ref="green2" />
    <minPt>2 3 0.55</minPt>
    <maxPt>4.9 3.1 1</maxPt>
  </surface>
  <surface type="Sphere" name="Wadrobe 3 - knob">
    <shader ref="green4" />
    <center>3.45 3.1 0.775</center>
    <radius>0.1</radius>
  </surface>
  <surface type="Box" name="Wadrobe 4">
    <shader ref="green2" />
    <minPt>5.1 3 0.55</minPt>
    <maxPt>8 3.1 1</maxPt>
  </surface>
  <surface type="Sphere" name="Wadrobe 2 - knob">
    <shader ref="green4" />
    <center>6.55 3.1 0.775</center>
    <radius>0.1</radius>
  </surface>
  <surface type="Box" name="Mattress">
    <shader ref="white1" />
    <minPt>2 0 1</minPt>
    <maxPt>8 3 1.5</maxPt>
  </surface>
  <surface type="Box" name="Desk">
    <shader ref="green2" />
    <minPt>0 0 1.5</minPt>
    <maxPt>1.8 8 1.7</maxPt>
  </surface>
  <surface type="Box" name="Desk vertical slab">
    <shader ref="green2" />
    <minPt>0 7.8 0</minPt>
    <maxPt>1.8 8 1.5</maxPt>
  </surface>
  <surface type="Box" name="Laptop-bottom">
    <shader ref="black1" />
    <minPt>1.0 6 1.7</minPt>
    <maxPt>1.8 7 1.75</maxPt>
  </surface>
  <surface type="Box" name="Laptop-top">
    <shader ref="glazed" />
    <minPt>1.0 6 1.75</minPt>
    <maxPt>1.05 7 2.55</maxPt>
  </surface>
  <surface type="Cylinder" name="chair-bottom">
    <shader ref="green4" />
    <center>3 6.5 0.05</center>
    <radius>0.5</radius>
    <height>0.1</height>
  </surface>
  <surface type="Cylinder" name="chair-top">
    <shader ref="glazed2" />
    <center>3 6.5 1.05</center>
    <radius>0.7</radius>
    <height>0.1</height>
  </surface>
  <surface type="Cylinder" name="chair-connecting">
    <shader ref="green4" />
    <center>3 6.5 0.55</center>
    <radius>0.1</radius>
    <height>1</height>
  </surface>
  <surface type="Cylinder" name="pillow1">
    <shader ref="green1" />
    <center>7.2 0.8 1.5</center>
    <radius>0.5</radius>
    <height>0.1</height>
  </surface>
  <surface type="Cylinder" name="pillow2">
    <shader ref="green1" />
    <center>7.2 2.2 1.5</center>
    <radius>0.5</radius>
    <height>0.1</height>
  </surface>
  <surface type="Cylinder" name="lamp-bottom">
    <shader ref="green3" />
    <center>0.4 7.6 1.75</center>
    <radius>0.3</radius>
    <height>0.1</height>
  </surface>
  <surface type="Cylinder" name="lamp-connecting">
    <shader ref="glazed2" />
    <center>0.4 7.6 2.25</center>
    <radius>0.05</radius>
    <height>1</height>
  </surface>
  <surface type="Sphere" name="lamp-lightbulb">
    <shader ref="green4" />
    <center>0.4 7.6 2.75</center>
    <radius>0.4</radius>
  </surface>

  <light name="sunlight">
    <position>-10 5 10</position>
    <intensity>1 1 1</intensity>
  </light>
  <light name="roof light">
    <position>6 6 10</position>
    <intensity>0.7 0.7 0.7</intensity>
  </light>
  <light name="lamp">
    <position>0.4 7.15 2.74</position>
    <intensity>0.4 0.4 0.4</intensity>
  </light>
</scene>
